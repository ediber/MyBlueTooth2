<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gilharap.mybluetooth2.MainActivity">

    <Button
        android:id="@+id/showPairedDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showDevices"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp" />

    <Button
        android:id="@+id/sendMessageToPairedDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendMessageToPairedDevice"
        app:layout_constraintRight_toRightOf="@+id/showPairedDevices"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/showPairedDevices" />

    <Button
        android:id="@+id/closeSocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="closeSocket"
        app:layout_constraintRight_toRightOf="@+id/sendMessageToPairedDevice"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/sendMessageToPairedDevice" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginRight="76dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="76dp">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/recycler"
        android:layout_marginRight="61dp"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginEnd="61dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="27dp"
        android:checkedButton="@+id/RBConfigLeadOffDetection"
        app:layout_constraintRight_toLeftOf="@+id/closeSocket"
        app:layout_constraintTop_toBottomOf="@+id/sendMessageToPairedDevice">

        <RadioButton
            android:id="@+id/RBGetFWVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RBGetFWVersion" />

        <RadioButton
            android:id="@+id/RBConfigLeadOffDetection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RBConfigLeadOffDetection" />

        <RadioButton
            android:id="@+id/RBStopLeadOffDetection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RBStopLeadOffDetection" />


    </RadioGroup>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler"
        android:layout_marginStart="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:id="@+id/indicatorsLayout1"
            android:layout_marginBottom="10dp"
            >

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/indicatorsLayout2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
